{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DevHub Pro",
  "version": "0.1.0",
  "identifier": "com.devhub.pro",
  "build": {
    "frontendDist": "frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "features": ["gui"]
  },
  "app": {
    "windows": [
      {
        "title": "DevHub Pro",
        "width": 900,
        "height": 600,
        "minWidth": 700,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
